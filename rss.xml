---
layout: null
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Microblog Posts</title>
    <link>https://micro.chrisfinazzo.com/</link>
    <atom:link href="https://micro.chrisfinazzo.com/rss.xml" rel="self" type="application/rss+xml" />
    <description>Chris Finazzo</description>
    <language>en-us</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts %}
    <item>
      <title>{{ post.title }}</title>
      <link>https://micro.chrisfinazzo.com{{ post.url }}</link>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <author>chris@chrisfinazzo.com (Chris Finazzo)</author>
      <guid>https://micro.chrisfinazzo.com{{ post.id }}</guid>
      <description>{{ post.content | xml_escape }}</description>
    </item>
    {% endfor %}

  </channel> 
</rss>
